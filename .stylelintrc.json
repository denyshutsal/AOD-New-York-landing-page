{
  "extends": ["stylelint-config-standard", "stylelint-config-prettier"],
  "plugins": ["stylelint-prettier"],
  "rules": {
    "prettier/prettier": true,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "include",
          "mixin",
          "each",
          "else",
          "extend",
          "for",
          "function",
          "if",
          "return",
          "while"
        ]
      }
    ],
    "string-quotes": "single"
  }
}
